<?xml version="1.0" encoding="utf-8"?>
<s:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009"
					   xmlns:s="library://ns.adobe.com/flex/spark"
					   xmlns:mx="library://ns.adobe.com/flex/mx"
					   xmlns:ns1="*"
					   width="960" height="480" alpha="1.0" backgroundAlpha="1.0"
					   creationComplete="init()">
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<s:HGroup left="10" right="10" top="10" bottom="10" requestedColumnCount="2">
		<s:BorderContainer id="borderLayer" width="65%" height="100%" alpha="1.0" borderStyle="solid"
						   cornerRadius="10">
		</s:BorderContainer>
		
		<s:VGroup id="rightColumn"  width="35%" height="100%">
			<s:BorderContainer width="100%" height="80%" cornerRadius="10">
				<s:VGroup id="inspector" x="0" y="0" width="100%" height="100%" paddingBottom="10"
						  paddingLeft="10" paddingRight="10" paddingTop="10">
				</s:VGroup>
			</s:BorderContainer>
			<s:BorderContainer width="100%" height="20%" cornerRadius="10">
				<s:HGroup x="0" y="0" width="100%" height="100%" paddingBottom="10"
						  paddingLeft="10" paddingRight="10" paddingTop="10">
					<s:Button id="open" label="open" width = "80" height = "40" click="onOpen()">
					</s:Button>
					<s:Button id="save" label="save" width = "80" height = "40" click="onSave()">
					</s:Button>
				</s:HGroup>
			</s:BorderContainer>
		</s:VGroup>
	</s:HGroup>
	
	<fx:Script>
		<![CDATA[
			import com.wonder.DataParser;
			import com.wonder.EditController;
			
			import mx.core.UIComponent;
			
			private var m_editLayer:UIComponent;
			private var m_inspector:VGroup;
			private var m_borderContainer:BorderContainer;
			
			public function init():void
			{
				m_inspector = this["inspector"]; 
				m_editLayer = new UIComponent();
				m_borderContainer = this["borderLayer"];
				m_borderContainer.addElement(m_editLayer);
				m_borderContainer.addEventListener(Event.RESIZE, onResize);
				onResize(null);
				
				new EditController(m_editLayer,m_inspector);
			}
			
			private function onResize(e:Event):void
			{
				m_editLayer.width = m_borderContainer.width;
				m_editLayer.height = m_borderContainer.height;
			}
			
			private function onSave():void
			{
				EditController.getInstance().save();
			}
			
			private function onOpen():void
			{
				DataParser.parseSkeletonJson();
			}
		]]>
	</fx:Script>
</s:WindowedApplication>
